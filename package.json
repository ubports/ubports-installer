{
  "name": "ubports-installer",
  "version": "0.8.6-beta",
  "description": "The easy way to install Ubuntu Touch on UBports devices. A friendly cross-platform Installer for Ubuntu Touch. Just connect a supported device to your PC, follow the on-screen instructions and watch this awesome tool do all the rest.",
  "keywords": [
    "Ubuntu",
    "Ubuntu Touch",
    "UBports",
    "UBports Installer",
    "Android",
    "ADB",
    "Fastboot",
    "Heimdall"
  ],
  "homepage": "https://devices.ubuntu-touch.io",
  "bugs": {
    "url": "https://github.com/ubports/ubports-installer/issues",
    "email": "info@ubports.com"
  },
  "repository": "https://github.com/ubports/ubports-installer",
  "author": "UBports Foundation <info@ubports.com>",
  "license": "GPL-3.0",
  "main": "src/main.js",
  "bin": {
    "ubports-installer": "src/main.js"
  },
  "scripts": {
    "start": "npm run prerender && electron .",
    "prerender": "npx gulp pug",
    "lint": "npx eslint *.js \"src/**/*.js\" \"__mocks__/**/*.js\"",
    "lint-fix": "npm run lint -- --fix",
    "docs": "npx jsdoc -c jsdoc-config.json",
    "diagram": "npx arkit -f src/main.js",
    "test": "npx jest --coverage"
  },
  "devDependencies": {
    "arkit": "^1.6.4",
    "electron": "^11.3.0",
    "electron-builder": "^22.9.1",
    "electron-packager": "^15.1.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-prettier": "^3.1.4",
    "gulp": "^4.0.2",
    "gulp-pug": "^4.0.1",
    "jest": "^26.6.3",
    "jsdoc": "^3.6.6",
    "prettier": "^1.19.1"
  },
  "dependencies": {
    "7zip-min": "^1.2.0",
    "axios": "^0.21.1",
    "bootstrap": "^3.3.7",
    "commander": "^6.2.1",
    "electron-dynamic-prompt": "^1.0.2",
    "electron-open-link-in-browser": "^1.0.2",
    "electron-store": "^6.0.1",
    "form-data": "^3.0.0",
    "fs-extra": "^9.0.1",
    "graphql": "^15.4.0",
    "jquery": "^3.5.0",
    "jquery-i18next": "^1.2.0",
    "open-cuts-reporter": "^1.0.1",
    "popper.js": "^1.16.0",
    "progressive-downloader": "^1.0.6",
    "promise-android-tools": "^4.0.5",
    "ps-tree": "^1.2.0",
    "sudo-prompt": "^9.2.1",
    "systeminformation": "^5.5.0",
    "ubuntu-pastebin": "^1.0.1",
    "winston": "^3.3.3",
    "yaml": "^2.0.0-1"
  },
  "arkit": {
    "$schema": "https://arkit.pro/schema.json",
    "excludePatterns": [
      "__mocks__",
      "**/*.spec.*",
      "src/pug"
    ],
    "components": [
      {
        "type": "Lib",
        "patterns": [
          "src/lib/**/*.js"
        ]
      },
      {
        "type": "Core",
        "patterns": [
          "src/core/**/*.js"
        ]
      },
      {
        "type": "Plugins",
        "patterns": [
          "src/core/plugins/**/*.js"
        ]
      },
      {
        "type": "Component",
        "patterns": [
          "src/**/*.js"
        ]
      }
    ],
    "output": [
      {
        "path": [
          "dist/arkit.svg",
          "dist/arkit.png"
        ],
        "groups": [
          {
            "first": true,
            "components": [
              "Component"
            ]
          },
          {
            "type": "Lib",
            "components": [
              "Lib"
            ]
          },
          {
            "type": "Core",
            "components": [
              "Core"
            ]
          },
          {
            "type": "Dependencies",
            "components": [
              "Dependency"
            ]
          }
        ]
      }
    ]
  }
}
